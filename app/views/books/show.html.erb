<div style="height: 50px"></div>

<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
<p><%= flash[:alert] %></p>
<% end %>

<div class="container">
  <div class="row">
   <div class="col-xs-3">
	<%= render "books/temp-top", user: @user %>
	<%= render "books/temp-bottom",book: @book %>
   </div>

<div class=col-xs-9>
<h2 class="col-xs-9">Book detail</h2>
<table class="table col-xs-9">
  <tbody>
	<tr>
		<td><%= link_to user_path(@user),  class:"user_#{@user.id}" do %>
				<%= attachment_image_tag @user,:image,:fill, 40, 40,fallback: "img/no_image.jpg" %>
			<% end %>
		</td>
		<td><%= @book_show.title %></td>
		<td><%= @book_show.body %></td>
	<% if @book_show.user == current_user %>
		<td><%= link_to "Edit", edit_book_path(@book_show), class:"edit_book_#{@book_show.id} btn btn-success" %>
		</td>
		<td><%= link_to "Destroy", destroy_book_path, method: :delete,"data-confirm" => "本当に消しますか？", class:"destroy_book_#{@book.id} btn btn-danger" %>
		</td>
	<% end %>
	</tr>
  </tbody>
</table>

	</div>
  </div>
</div>