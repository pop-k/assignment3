<div class="container">
	<div class="row">
	 <div class="col-xs-3">
		<h2>New book</h2>
		<%= form_for(book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title, class:"book_title" %>

			<h4>Opinion</h4>
			<%= f.text_area :body, class:"book_body" %>

			<%= f.submit "Create Book", class:"btn btn-info btn-block" %>

			<% end %>
		</div>
	</div>
  </div>