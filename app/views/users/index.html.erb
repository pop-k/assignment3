<div style="height: 50px"></div>

<div class="container">
  <div class="row">
   <div class="col-xs-3">
	<%= render "users/temp-top", user: current_user %>
	<%= render "users/temp-bottom",book: @book %>
   </div>

<div class="col-xs-9">
<h2>Users</h2>
<table class="table">
  <thead>
	<tr>
		<th>image</th>
		<th>name</th>
		<th>   </th>
	</tr>

  </thead>
<% @users.each do |user| %>
  <tbody>
	<tr>
		<td><%= attachment_image_tag user, :image,:fill, 40, 40,fallback: "img/no_image.jpg" %></td>
		<td><%= user.name %></td>
		<td><%= link_to "Show", user_path(user), class:"user_#{@user.id}" %></td>
	</tr>
  </tbody>
  <% end %>
</table>

	</div>


  </div>
</div>